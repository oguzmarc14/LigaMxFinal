<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/cassette_bg">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cassetteCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/cassette_card"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/player_poster"
                android:alpha="0.9"/>

            <LinearLayout
                android:id="@+id/nowInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#66000000"
                android:padding="8dp">

                <TextView
                    android:id="@+id/nowTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin reproducciÃ³n"
                    android:textStyle="bold"
                    android:textColor="@color/cassette_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/nowArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/cassette_text"/>

                <TextView
                    android:id="@+id/nowDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cassette_text"
                    android:text="00:00 / 00:00"/>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/cassette_card"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cassetteCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/cassette_card"
            android:tint="@color/cassette_text"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="@string/prev"/>

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/cassette_card"
            android:tint="@color/cassette_accent"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="@string/play"/>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/cassette_card"
            android:tint="@color/cassette_text"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="@string/next"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@color/cassette_text"
        app:backgroundTint="@color/cassette_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
