<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/cassette_card"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wCover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cassette"
        app:tint="@color/cassette_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sin reproducciÃ³n"
            android:textColor="@color/cassette_text"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/wPrev"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_previous"
        app:tint="@color/cassette_text" />

    <ImageButton
        android:id="@+id/wPlayPause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_play"
        app:tint="@color/cassette_accent" />

    <ImageButton
        android:id="@+id/wNext"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_next"
        app:tint="@color/cassette_text" />
</LinearLayout>
